#----------------------------------------------------------------------
#----------------------------------------------------------------------
# File make creates a subset Pascal Scanner 
#----------------------------------------------------------------------
# Object files
#----------------------------------------------------------------------
obj =		p01.o \
	p01lex.o			
#----------------------------------------------------------------------
# Bind the subset Pascal Scanneer 
#----------------------------------------------------------------------
p01:		${obj}
	g++ -o p01 ${obj} -lm -ll
#----------------------------------------------------------------------
# File p01.cpp processes command line arguments
#----------------------------------------------------------------------
p01.o:		p01.cpp p01lex.h
	g++ -c -g p01.cpp
#----------------------------------------------------------------------
# File paslex.cpp is the lex-generated scanner
#----------------------------------------------------------------------
p01lex.cpp:	p01lex.l p01lex.h
	lex p01lex.l
	mv lex.yy.c p01lex.cpp
#---------------------------------------------------------------------
#----------------------------------------------------------------------
p01lex.o:	p01lex.cpp p01lex.h
	g++ -c -g p01lex.cpp

